# Root project
root = true

# Tất cả file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# File markdown
[*.md]
trim_trailing_whitespace = false

# YAML, JSON, JS, TS, TSX
[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2

# HTML, CSS, SCSS
[*.{html,css,scss}]
indent_size = 2
